# Frontend environment variables (Create React App)
# Copy this file to .env.local and adjust values

# Toggle CMS integration
REACT_APP_ENABLE_CMS=true

# Strapi base URL (default to local quickstart)
REACT_APP_CMS_URL=http://localhost:1337

# Optional Strapi API token (Settings -> API Tokens)
REACT_APP_CMS_TOKEN=

# Public site URL for sitemap in prerender step
SITE_URL=https://example.com

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_NEWS_API_KEY=your_news_api_key_here

# Social Media Links
REACT_APP_TELEGRAM_URL=https://t.me/cryptoverify
REACT_APP_WHATSAPP_URL=https://wa.me/1234567890
REACT_APP_DISCORD_URL=https://discord.gg/cryptoverify

# Site Configuration
REACT_APP_SITE_URL=https://cryptoverify.com
REACT_APP_SITE_NAME=CryptoVerify

# Dev Server Port (optional override for CRA)
PORT=3001

# Analytics (when implemented)
REACT_APP_GA_TRACKING_ID=GA_MEASUREMENT_ID

# Feature Flags
REACT_APP_ENABLE_LIVE_CHAT=true
REACT_APP_ENABLE_PWA=true