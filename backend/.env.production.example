# Strapi Production Environment

NODE_ENV=production
HOST=0.0.0.0
PORT=1337

# Required secrets (generate strong random strings)
APP_KEYS=appKey1,appKey2,appKey3,appKey4
API_TOKEN_SALT=replace_with_random
ADMIN_JWT_SECRET=replace_with_random
JWT_SECRET=replace_with_random
TRANSFER_TOKEN_SALT=replace_with_random

# CORS (set to your frontend origin)
FRONTEND_ORIGIN=https://app.gambleverify.com

# Database (SQLite by default). To use Postgres, uncomment and configure:
# DATABASE_CLIENT=postgres
# DATABASE_HOST=db
# DATABASE_PORT=5432
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=replace_with_strong
# DATABASE_SSL=false

# Admin public URL (recommended behind reverse proxy with HTTPS)
# Used by Strapi to generate absolute URLs and set secure cookies correctly.
STRAPI_ADMIN_BACKEND_URL=https://api.gambleverify.com
