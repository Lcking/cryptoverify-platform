{
  "kind": "collectionType",
  "collectionName": "exposures",
  "info": {
    "singularName": "exposure",
    "pluralName": "exposures",
    "displayName": "Exposure"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "platform",
      "required": true
    },
    "platform": {
      "type": "string",
      "required": true
    },
    "severity": {
      "type": "enumeration",
      "required": true,
      "default": "Medium",
      "enum": [
        "Critical",
        "High",
        "Medium",
        "Low"
      ]
    },
    "reportedDate": {
      "type": "date"
    },
    "summary": {
      "type": "text"
    },
    "evidence": {
      "type": "text"
    },
    "riskFactors": {
      "type": "text"
    },
    "reporterCount": {
      "type": "integer",
      "default": 1
    },
    "lastUpdate": {
      "type": "date"
    },
    "exposureType": {
      "type": "enumeration",
      "required": true,
      "default": "Fake License",
      "enum": [
        "Fake License",
        "Ponzi",
        "Exit Scam",
        "Data Manipulation",
        "Locked Funds"
      ]
    },
    "caseStatus": {
      "type": "enumeration",
      "required": true,
      "default": "Investigating",
      "enum": [
        "Investigating",
        "Confirmed",
        "Warning",
        "Mitigated",
        "Resolved",
        "Dismissed"
      ]
    }
  }
}
