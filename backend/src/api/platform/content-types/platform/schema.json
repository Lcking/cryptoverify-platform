{
  "kind": "collectionType",
  "collectionName": "platforms",
  "info": {
    "singularName": "platform",
    "pluralName": "platforms",
    "displayName": "Platform"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "website": {
      "type": "string"
    },
    "score": {
      "type": "decimal"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "business": {
      "type": "string"
    },
    "summary": {
      "type": "text"
    },
    "pairs": {
      "type": "integer"
    },
    "volume": {
      "type": "string"
    },
    "verifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::verification.verification",
      "mappedBy": "platform"
    }
  }
}
